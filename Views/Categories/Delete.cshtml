@model AstraBlog.Models.Category
@using AstraBlog.Services.Interfaces
@using AstraBlog.Enums

@inject IImageService _ImageService

@{
    ViewData["Title"] = "Delete Category";
}

<style>
    .delete-card {
        background: #fff;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0,0,0,0.1);
        padding: 2rem;
        margin-bottom: 2rem;
    }

    .warning-icon {
        color: #e74c3c;
        font-size: 3rem;
        margin-bottom: 1rem;
    }

    .delete-title {
        color: #2c3e50;
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 1rem;
    }

    .delete-message {
        color: #666;
        margin-bottom: 2rem;
    }

    .category-details {
        background: #f8f9fa;
        border-radius: 8px;
        padding: 1.5rem;
        margin-bottom: 2rem;
    }

    .detail-item {
        margin-bottom: 1rem;
    }

    .detail-label {
        font-weight: 600;
        color: #2c3e50;
    }

    .detail-value {
        color: #666;
    }

    .category-image {
        max-width: 200px;
        border-radius: 8px;
        margin-bottom: 1rem;
    }

    .action-buttons {
        display: flex;
        gap: 1rem;
        justify-content: flex-end;
    }

    .btn {
        padding: 0.75rem 2rem;
        border-radius: 8px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .btn-danger {
        background-color: #e74c3c;
        border: none;
    }

    .btn-danger:hover {
        background-color: #c0392b;
        transform: translateY(-2px);
    }

    .btn-secondary {
        background-color: #95a5a6;
        border: none;
    }

    .btn-secondary:hover {
        background-color: #7f8c8d;
        transform: translateY(-2px);
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="delete-card text-center">
                <i class="fas fa-exclamation-triangle warning-icon"></i>
                <h1 class="delete-title">Delete Category</h1>
                <p class="delete-message">Are you sure you want to delete this category? This action cannot be undone.</p>

                <div class="category-details">
                    <div class="detail-item">
                        <div class="category-image">
                            <img src="@_ImageService.ConvertByteArrayToFile(Model.ImageData!, Model.ImageType!, (int)DefaultImage.CategoryImage)" 
                                 alt="@Model.Name" class="img-fluid">
                        </div>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Name:</span>
                        <span class="detail-value">@Model.Name</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Description:</span>
                        <span class="detail-value">@Model.Description</span>
                    </div>
                </div>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <div class="action-buttons">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Delete
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
