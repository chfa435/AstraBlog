@model AstraBlog.Models.BlogPost
@using AstraBlog.Enums;
@using AstraBlog.Services.Interfaces
@using AstraBlog.Models.Enums

@inject IImageService _ImageService
@inject IAstraBlogService _BlogPostService

@{
    ViewData["Title"] = "Create New Blog Post";
}

<style>
    .ck-editor__editable_inline {
        min-height: 600px;
    }

    .form-card {
        background: #fff;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0,0,0,0.1);
        padding: 2rem;
        margin-bottom: 2rem;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-label {
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 0.5rem;
    }

    .form-control {
        border-radius: 8px;
        border: 1px solid #e0e0e0;
        padding: 0.75rem 1rem;
        transition: all 0.3s ease;
    }

    .form-control:focus {
        border-color: #3498db;
        box-shadow: 0 0 0 0.2rem rgba(52, 152, 219, 0.25);
    }

    .btn-primary {
        background-color: #3498db;
        border: none;
        padding: 0.75rem 2rem;
        border-radius: 8px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .btn-primary:hover {
        background-color: #2980b9;
        transform: translateY(-2px);
    }

    .image-preview {
        border-radius: 8px;
        overflow: hidden;
        margin-bottom: 1rem;
    }

    .tag-container {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin-top: 0.5rem;
    }

    .tag {
        background: #f1f1f1;
        padding: 0.25rem 0.75rem;
        border-radius: 20px;
        font-size: 0.875rem;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .tag:hover {
        background: #e0e0e0;
    }

    .status-select {
        width: 200px;
        border-radius: 8px;
        padding: 0.5rem;
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="form-card">
                <h1 class="mb-4">Create New Blog Post</h1>
                
                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>
                    
                    <div class="row">
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label asp-for="ImageFile" class="form-label">Featured Image</label>
                                <div class="image-preview">
                                    <img class="img-fluid" style="max-height: 350px;" 
                                         src="@_ImageService.ConvertByteArrayToFile(Model.ImageData!,Model.ImageType!,(int)DefaultImage.BlogPostImage)" 
                                         id="blogImage">
                                </div>
                                <input asp-for="ImageFile" type="file" class="form-control mt-3" 
                                       accept=".png,.jpg,.jpeg,.gif"
                                       onchange="document.getElementById('blogImage').src = window.URL.createObjectURL(this.files[0])" />
                            </div>

                            <div class="form-group">
                                <label asp-for="Title" class="form-label"></label>
                                <input asp-for="Title" class="form-control" placeholder="Enter post title" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Abstract" class="form-label"></label>
                                <textarea asp-for="Abstract" class="form-control" rows="3" 
                                          placeholder="Write a brief summary of your post"></textarea>
                                <span asp-validation-for="Abstract" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="CategoryId" class="form-label">Category</label>
                                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId">
                                    <option value="">Select a category</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-lg-8">
                            <div class="form-group">
                                <label asp-for="Content" class="form-label"></label>
                                <textarea asp-for="Content" class="editor form-control"></textarea>
                                <span asp-validation-for="Content" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label class="form-label">Tags</label>
                                <input class="form-control" type="text" id="tagInput" name="StringTags" 
                                       placeholder="Add tags (comma separated)" autocomplete="off" />
                                <div class="tagcloud axil-single-widget mt-2" style="display:none">
                                    @foreach (Tag tag in await _BlogPostService.GetTagsAsync())
                                    {
                                        <a onclick="addTag(this)" class="tag">@tag.Name</a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group d-flex justify-content-between align-items-center mt-4">
                        <div>
                            <label class="form-label me-3" asp-for="Status">Post Status</label>
                            <select asp-for="Status" class="status-select">
                                <option value="@PublishStatus.Draft">Draft</option>
                                <option value="@PublishStatus.ReadyForReview">Ready for Review</option>
                                <option value="@PublishStatus.Published">Published</option>
                                <option value="@PublishStatus.Archived">Archived</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary">Create Post</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function addTag(element) {
            const tagInput = document.getElementById('tagInput');
            const currentTags = tagInput.value.split(',').map(tag => tag.trim());
            const newTag = element.textContent.trim();
            
            if (!currentTags.includes(newTag)) {
                currentTags.push(newTag);
                tagInput.value = currentTags.join(', ');
            }
        }
    </script>
}
