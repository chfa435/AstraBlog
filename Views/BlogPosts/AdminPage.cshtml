@model IEnumerable<BlogPost>
@using AstraBlog.Enums;
@using AstraBlog.Services.Interfaces

@inject IImageService _ImageService
@inject IAstraBlogService _BlogPostService

<div class="axil-post-list-area axil-section-gap bg-color-white">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-title">
                    <h2 class="title mb--40">Admin Dashboard</h2>
                </div>
            </div>
        </div>

        <!-- Statistics Cards -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card bg-primary text-white">
                    <div class="card-body">
                        <h5 class="card-title">Total Posts</h5>
                        <h2 class="card-text">@Model.Count()</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-success text-white">
                    <div class="card-body">
                        <h5 class="card-title">Published</h5>
                        <h2 class="card-text">@Model.Count(p => p.Status == PublishStatus.Published)</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-warning text-white">
                    <div class="card-body">
                        <h5 class="card-title">Drafts</h5>
                        <h2 class="card-text">@Model.Count(p => p.Status == PublishStatus.Draft)</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-info text-white">
                    <div class="card-body">
                        <h5 class="card-title">Ready for Review</h5>
                        <h2 class="card-text">@Model.Count(p => p.Status == PublishStatus.ReadyForReview)</h2>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="row mb-4">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title">Quick Actions</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex gap-2">
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="fas fa-plus"></i> New Post
                            </a>
                            <a asp-controller="Categories" asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-tags"></i> Manage Categories
                            </a>
                            <a asp-controller="Comments" asp-action="Index" class="btn btn-info">
                                <i class="fas fa-comments"></i> Manage Comments
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Activity -->
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title">Recent Activity</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Title</th>
                                        <th>Status</th>
                                        <th>Last Updated</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var post in Model.OrderByDescending(p => p.Updated).Take(5))
                                    {
                                        <tr>
                                            <td>@post.Title</td>
                                            <td>
                                                <span class="badge bg-@(post.Status == PublishStatus.Published ? "success" : 
                                                                      post.Status == PublishStatus.Draft ? "warning" : 
                                                                      post.Status == PublishStatus.ReadyForReview ? "info" : "secondary")">
                                                    @post.Status
                                                </span>
                                            </td>
                                            <td>@post.Updated.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                <a asp-action="Edit" asp-route-id="@post.Id" class="btn btn-sm btn-primary">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a asp-action="Details" asp-route-slug="@post.Slug" class="btn btn-sm btn-info">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

